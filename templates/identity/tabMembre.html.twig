    {% for event in events %}
      
        <option>{{ loop.index ~"-"~event.nom }}</option> 

    {% endfor %}
</select>

<h1>Membres Tableau en TWIG / Membres paire / Impaire </h1>
{% set membres = {'pierre': '10','Micheal': '15', 'paul':'25'} %}
<ul>
    {% for key, age in membres %}
    <li>
    {{ loop.index ~" "~ key ~" "~age}} ans ===>  
    {% if loop.index is even %}
            pair
        {% else %}
            impair
        {% endif %}
    </li>
    {% endfor %}
   
</ul>

<h1>Membres Tableau en TWIG / DIV 3 </h1>
{% set membres = {'pierre': '10','Micheal': '15', 'paul':'25'} %}
<ul>
    {% for key, age in membres %}
    <li>
    {{ loop.index ~" "~ key ~" "~age}} ans ===>  
    {% if loop.index is divisible by(3) %}
            divisible par 3 
        {% else %}
            n'est pas div par 3
        {% endif %}
    </li>
    {% endfor %}
   
</ul>
